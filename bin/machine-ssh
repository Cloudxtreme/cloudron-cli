#!/usr/bin/env node

'use strict';

require('../src/common.js');

var program = require('commander'),
    actions = require('../src/machine/actions.js');

program.version(require('../package.json').version);

program.description('Get remote SSH connection')
    .option('--ssh-key-file <ssh key file>', 'SSH key filepath')
    .option('--fqdn <domain>', 'Domain eg. cloudron.io')
    .option('--cmd [cmd]', 'Optional command to execute');  // FIXME this should be a direct argument with ellipsis

program.parse(process.argv);

actions.ssh(program);
